<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardview_vertical_margin"
    android:layout_marginBottom="@dimen/cardview_vertical_margin"
    android:layout_marginStart="@dimen/cardview_horizontal_margin"
    android:layout_marginEnd="@dimen/cardview_horizontal_margin">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/cardview_avatar_image_view_size"
            android:layout_height="@dimen/cardview_avatar_image_view_size"
            android:layout_marginTop="@dimen/cardview_avatar_image_view_margin"
            android:layout_marginBottom="@dimen/cardview_avatar_image_view_margin"
            android:layout_marginStart="@dimen/cardview_avatar_image_view_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/loginIdTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_inner_vertical_margin"
            android:layout_marginStart="@dimen/cardview_text_horizontal_margin"
            android:layout_marginEnd="@dimen/cardview_text_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#DE000000"
            android:textSize="@dimen/text_size_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatarImageView"
            app:layout_constraintTop_toTopOf="@+id/avatarImageView"/>

        <TextView
            android:id="@+id/numericalIdTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_inner_vertical_margin"
            android:layout_marginStart="@dimen/cardview_text_horizontal_margin"
            android:layout_marginEnd="@dimen/cardview_text_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#8A000000"
            android:textSize="@dimen/text_size_xs"
            app:layout_constraintStart_toEndOf="@+id/avatarImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/avatarImageView" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
